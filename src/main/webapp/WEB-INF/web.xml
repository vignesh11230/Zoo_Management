<?xml version="1.0" encoding="UTF-8"?>
<element>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <Connector port="8080" protocol="HTTP/1.1"
           connectionTimeout="20000"
           redirectPort="8443" />
        
        <servlet-name>AddAnimalServlet</servlet-name>
        <servlet-class>com.zoo.servlets.AddAnimalServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddAnimalServlet</servlet-name>
        <url-pattern>/addAnimal</url-pattern>
    </servlet-mapping>
     <servlet>
        <servlet-name>ViewAnimalsServlet</servlet-name>
        <servlet-class>com.zoo.servlets.ViewAnimalsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewAnimalsServlet</servlet-name>
        <url-pattern>/animals</url-pattern>
    </servlet-mapping>
    
    
   

<servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.zoo.servlets.LoginServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>WatchAnimalLiveServlet</servlet-name>
    <servlet-class>com.zoo.servlets.WatchAnimalLiveServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>WatchAnimalLiveServlet</servlet-name>
    <url-pattern>/watchLiveAnimals</url-pattern>
</servlet-mapping>
 <servlet>
        <servlet-name>TouristLoginServlet</servlet-name>
        <servlet-class>com.zoo.servlets.TouristLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TouristLoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TouristRegistrationServlet</servlet-name>
        <servlet-class>com.zoo.servlets.TouristRegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TouristRegistrationServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BookingServlet</servlet-name>
        <servlet-class>com.zoo.servlets.BookingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookingServlet</servlet-name>
        <url-pattern>/bookVisit</url-pattern>
    </servlet-mapping>

  
    </web-app>
</element>









	








